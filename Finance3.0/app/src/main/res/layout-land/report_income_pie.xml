<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlNormal"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/background_margin"
        android:layout_weight="7"
        android:background="@drawable/shape_light"
        android:clickable="false"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/walletsNames"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:id="@+id/pieListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/background_margin"
            android:layout_marginRight="@dimen/background_margin"
            android:background="?attr/colorBackgroundFloating"
            android:divider="?attr/colorControlNormal"
            android:dividerHeight="@dimen/divider" />
    </LinearLayout>


</LinearLayout>