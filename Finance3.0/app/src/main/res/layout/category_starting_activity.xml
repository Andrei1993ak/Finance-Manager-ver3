<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlNormal">

    <LinearLayout
        android:id="@+id/categoryListVIew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/background_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_list_margin_bottom"
            android:background="?attr/colorBackgroundFloating"
            android:duplicateParentState="true"
            android:onClick="onSelectedCategoryViewClick"
            android:paddingBottom="@dimen/main_list_padding_bootom"
            android:paddingLeft="@dimen/main_list_paddint_lef"
            android:paddingTop="@dimen/main_list_padding_top"
            android:text="@string/incomes"
            android:textSize="@dimen/main_activity_text_size" />


        <TextView
            android:id="@+id/tvCosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorBackgroundFloating"
            android:onClick="onSelectedCategoryViewClick"
            android:paddingBottom="@dimen/main_list_padding_bootom"
            android:paddingLeft="@dimen/main_list_paddint_lef"
            android:paddingTop="@dimen/main_list_padding_top"
            android:text="@string/costs"
            android:textIsSelectable="false"
            android:textSize="@dimen/main_activity_text_size" />


    </LinearLayout>

</RelativeLayout>