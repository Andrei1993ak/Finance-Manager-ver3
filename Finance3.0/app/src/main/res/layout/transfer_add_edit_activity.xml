<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_transfer_add_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorControlNormal">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/background_margin"
            android:background="?shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/background_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/transfer_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/table_indent_bottom"
                            android:layout_marginRight="@dimen/table_indent"
                            android:layout_marginTop="@dimen/table_indent_bottom"
                            android:text="@string/name"
                            android:textSize="@dimen/table_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/table_indent_bottom"
                            android:layout_marginRight="@dimen/table_indent"
                            android:text="@string/fromWallet"
                            android:textSize="@dimen/table_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/table_indent_bottom"
                            android:layout_marginRight="@dimen/table_indent"
                            android:text="@string/amount"
                            android:textSize="@dimen/table_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/table_indent_bottom"
                            android:layout_marginRight="@dimen/table_indent"
                            android:text="@string/toWallet"
                            android:textSize="@dimen/table_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/table_indent_bottom"
                            android:layout_marginRight="@dimen/table_indent"
                            android:text="@string/amount"
                            android:textSize="@dimen/table_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/table_indent_bottom"
                            android:layout_marginRight="@dimen/table_indent"
                            android:text="@string/date"
                            android:textSize="@dimen/table_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/transfer_fields"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/transfer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/line_indent"
                            android:background="@drawable/shape_green_field"
                            android:inputType="text"
                            android:paddingLeft="@dimen/table_padding_left" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/transfer_from_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="@dimen/line_indent"
                            android:layout_marginRight="@dimen/line_indent"
                            android:layout_marginTop="@dimen/line_indent"
                            android:background="@drawable/shape_green_field" />

                        <EditText
                            android:id="@+id/transfer_from_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/line_indent"
                            android:layout_marginTop="@dimen/line_indent"
                            android:background="@drawable/shape_green_field"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/table_padding_left" />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/transfer_to_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="@dimen/line_indent"
                            android:layout_marginRight="@dimen/line_indent"
                            android:layout_marginTop="@dimen/line_indent"
                            android:background="@drawable/shape_green_field" />

                        <EditText
                            android:id="@+id/transfer_to_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/line_indent"
                            android:layout_marginTop="@dimen/line_indent"
                            android:background="@drawable/shape_green_field"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/table_padding_left" />

                        <TextView
                            android:id="@+id/transfer_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/line_indent"
                            android:layout_marginTop="@dimen/line_indent"
                            android:background="@drawable/shape_green_field"
                            android:paddingLeft="@dimen/table_padding_left" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/line_indent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/official_rate"
                        android:textSize="@dimen/table_text_size" />

                    <TextView
                        android:id="@+id/official_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/shape_gray_field" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>