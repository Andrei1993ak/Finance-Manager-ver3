<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlNormal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/background_margin"
        android:layout_marginRight="@dimen/background_margin"
        android:layout_marginTop="@dimen/background_margin"
        android:layout_weight="0.6">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/pursesNames"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/background_margin"
        android:layout_margin="@dimen/background_margin"
        android:layout_weight="7"
        android:background="@drawable/shape"
        android:clickable="false"
        android:orientation="vertical" />

    <ListView
        android:id="@+id/pieListView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/background_margin"
        android:layout_marginLeft="@dimen/background_margin"
        android:layout_marginRight="@dimen/background_margin"
        android:layout_weight="4"
        android:background="@drawable/shape" />
</LinearLayout>