<resources>

    <style name="Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#ffab40</item>
        <item name="colorPrimaryDark">#ffab40</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorControlNormal">#ffcc80</item>
        <item name="textColorSearchUrl">#757575</item>
        <item name="shape">@drawable/shape_light</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">#383a3b</item>
        <item name="colorAccent">#FF4081</item>
        <item name="shape">@drawable/shape_dark</item>
        <item name="colorControlNormal">#383a3b</item>
        <item name="textColorSearchUrl">#D5D6D7</item>
    </style>

    <style name="DarkNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#383a3b</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorControlNormal">#383a3b</item>
        <item name="textColorSearchUrl">#D5D6D7</item>
        <item name="shape">@drawable/shape_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="LightNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffab40</item>
        <item name="colorPrimaryDark">#ffab40</item>
        <item name="colorAccent">#FF4081</item>
        <item name="shape">@drawable/shape_light</item>
        <item name="colorControlNormal">#ffcc80</item>
        <item name="textColorSearchUrl">#757575</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
